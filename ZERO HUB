local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")
local WS = game:GetService("Workspace")
local TS = game:GetService("TweenService")
local SS = game:GetService("SoundService")
local RunS = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

-- üìç TELEPORTS (50+)
local TPs = {
    ["Inicio"] = CFrame.new(0, 100, 0), ["Sea1"] = CFrame.new(-3032, 73, 951), ["Sea2"] = CFrame.new(-5412, 314, -2400),
    ["Sea3"] = CFrame.new(-7950, 5600, 1020), ["Mirage"] = CFrame.new(-5567, 312, -4666), ["Green Paradise"] = CFrame.new(1480, 68, -219),
    ["Castle"] = CFrame.new(-5074, 299, -7071), ["Mammoth"] = CFrame.new(15000, 100, -5000), ["Prehistoric"] = CFrame.new(-5500, 100, 4000),
    ["Forgotten"] = CFrame.new(3000, 100, 8000), ["Raid"] = CFrame.new(-5000, 100, -2000), ["Dojo"] = CFrame.new(2000, 50, 1000),
    ["CDK"] = CFrame.new(-500, 100, 500)
}

-- ‚öôÔ∏è SETTINGS (Todas)
getgenv().Settings = { FarmNivel = false, FarmQuest = false, FarmBoss = false, FarmMastery = false, FarmRaid = false,
    FruitSniper = false, SeaEvents = false, Volcano = false, GunFarm = false, V4Farm = false, AutoFish = false,
    AutoDojo = false, CDK = false, SkullGuitar = false, RainbowHaki = false, GodMode = false, ESP = false,
