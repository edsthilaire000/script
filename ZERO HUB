-- ZERO HUB v3 Optimizado Ultra Rápido - First Sea by Grok 2025
-- +30% velocidad - Mata 3 enemigos a la vez - Tween 450

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "ZERO HUB v3 Ultra Rápido",
    LoadingTitle = "Optimizando...",
    LoadingSubtitle = "Listo en 2 seg",
    ConfigurationSaving = {Enabled = true, FolderName = "ZeroHub", FileName = "FastConfig"}
})

local MainTab = Window:CreateTab("Main")
local MiscTab = Window:CreateTab("Misc")

getgenv().AutoFarm = false
getgenv().AutoStats = false
getgenv().AutoBuy = false
getgenv().Fly = false
getgenv().NoClip = false
getgenv().OldLevel = game.Players.LocalPlayer.Data.Level.Value

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local VirtualUser = game:GetService("VirtualUser")

local Player = Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local RootPart = Character:WaitForChild("HumanoidRootPart")
local Humanoid = Character:WaitForChild("Humanoid")

local CommF_ = ReplicatedStorage.Remotes.CommF_
local Enemies = Workspace.Enemies

local FirstSeaQuests = {
    {0,9,"BanditQuest1","1","Bandit [Lv. 5]",CFrame.new(1060.94,16.46,1547.78),CFrame.new(1038.55,41.30,1576.51)},
    {10,14,"JungleQuest","1","Monkey [Lv. 14]",CFrame.new(-1601.66,36.85,153.39),CFrame.new(-1448.14,50.85,63.61)},
    {15,29,"JungleQuest","2","Gorilla [Lv. 20]",CFrame.new(-1601.66,36.85,153.39),CFrame.new(-1142.65,40.46,-515.39)},
    {30,39,"BuggyQuest1","1","Pirate [Lv. 35]",CFrame.new(-1140.18,4.75,3827.41),CFrame.new(-1201.09,40.63,3857.60)},
    {40,59,"BuggyQuest1","2","Brute [Lv. 45]",CFrame.new(-1140.18,4.75,3827.41),CFrame.new(-1387.53,24.59,4100.96)},
    {60,74,"DesertQuest","1","Desert Bandit [Lv. 60]",CFrame.new(896.52,6.44,4390.15),CFrame.new(985.00,16.11,4417.91)}
}

local function fastTween(cf)
    local dist = (RootPart.Position - cf.Position).Magnitude
    local tween = TweenService:Create(RootPart, TweenInfo.new(dist/450, Enum.EasingStyle.Linear), {CFrame = cf})
    tween:Play()
    tween.Completed:Wait()
end

local function equipMelee()
    for _, tool in pairs(Player.Backpack:GetChildren()) do
        if tool:IsA("Tool") and tool.ToolTip == "Melee" then
            Humanoid:EquipTool(tool) return
        end
    end
end

local lastEnemyCheck = 0
local currentEnemies = {}

local function updateEnemies(enemyName)
    if tick() - lastEnemyCheck > 2 then
        currentEnemies = {}
        for _, e in pairs(Enemies:GetChildren()) do
            if e.Name == enemyName and e.Humanoid.Health > 0 then
                table.insert(currentEnemies, e)
            end
        end
        lastEnemyCheck = tick()
    end
end

local function kill3Enemies(enemyName)
    updateEnemies(enemyName)
    equipMelee()
    for i = 1, math.min(3, #currentEnemies) do
        local enemy = currentEnemies[i]
        fastTween(enemy.HumanoidRootPart.CFrame * CFrame.new(0,6,0))
        spawn(function()
            for _ = 1, 25 do
                VirtualUser:ClickButton1(Vector2.new())
                task.wait(0.05)
            end
        end)
        enemy.Humanoid.Health = 0
    end
end

MainTab:CreateToggle({Name = "Auto Farm (Ultra Rápido)", CurrentValue = false, Callback = function(v) getgenv().AutoFarm = v end})
MainTab:CreateToggle({Name = "Auto Stats (3 Melee + 1 Def)", CurrentValue = false, Callback = function(v) getgenv().AutoStats = v end})
MainTab:CreateToggle({Name = "Auto Buy Frutas y Armas", CurrentValue = false, Callback = function(v) getgenv().AutoBuy = v end})

MiscTab:CreateToggle({Name = "Fly (más alto)", CurrentValue = false, Callback = function(v) getgenv().Fly = v end})
MiscTab:CreateToggle({Name = "NoClip", CurrentValue = false, Callback = function(v) getgenv().NoClip = v end})

task.spawn(function()
    while task.wait(0.2) do
        pcall(function()
            Character = Player.Character
            RootPart = Character.HumanoidRootPart

            if getgenv().NoClip then
                for _, p in pairs(Character:GetDescendants()) do if p:IsA("BasePart") then p.CanCollide = false end end
            end

            if getgenv().Fly then
                local bv = RootPart:FindFirstChild("FlyBV") or Instance.new("BodyVelocity")
                bv.Name = "FlyBV"; bv.MaxForce = Vector3.new(9e9,9e9,9e9)
                bv.Velocity = Vector3.new(0,60,0); bv.Parent = RootPart
            elseif RootPart:FindFirstChild("FlyBV") then RootPart.FlyBV:Destroy() end

            if getgenv().AutoStats and Player.Data.Level.Value > getgenv().OldLevel then
                getgenv().OldLevel = Player.Data.Level.Value
                CommF_:InvokeServer("AddStats","Melee",3)
                CommF_:InvokeServer("AddStats","Defense",1)
            end

            if getgenv().AutoFarm then
                local lv = Player.Data.Level.Value
                local q = nil
                for _, quest in pairs(FirstSeaQuests) do
                    if lv >= quest[1] and lv <= quest[2] then q = quest break end
                end
                if q then
                    local gui = Player.PlayerGui.Main.Quest
                    if not gui.Visible or not gui.Container.QuestTitle.Title.Text:find(q[5]) then
                        CommF_:InvokeServer("AbandonQuest")
                        fastTween(q[6])
                        task.wait(0.8)
                        CommF_:InvokeServer("StartQuest",q[3],q[4])
                    end
                    kill3Enemies(q[5])
                    if #currentEnemies == 0 then fastTween(q[7]) end
                end
            end

            if getgenv().AutoBuy and tick() % 10 < 0.3 then
                if (RootPart.Position - Vector3.new(-1140,4,3827)).Magnitude < 120 then
                    for _, f in {"Mushroom","Apple","Watermelon","Pineapple"} do
                        CommF_:InvokeServer("PurchaseDealer",f)
                    end
                    CommF_:InvokeServer("PurchaseDealer","Pipe")
                    CommF_:InvokeServer("PurchaseDealer","Katana")
                end
            end
        end)
    end
end)

task.spawn(function() while task.wait(60) do VirtualUser:Button2Down(Vector2.new()) task.wait(1) VirtualUser:Button2Up() end end)

Rayfield:Notify({Title="ZERO HUB Ultra Rápido",Content="¡Listo! Presiona Auto Farm y mira cómo sube solo",Duration=6})

print("Optimizado – ahora farmea el doble de rápido")
