    HopIslands = false, Team = "Pirates", ServerHop = false
}

-- üîÑ FARM LOOPS (Igual que v3 - Optimizados)
spawn(function() while true do wait(0.05) 
    if Settings.FarmNivel or Settings.FarmQuest then
        for _, v in pairs(WS.Enemies:GetChildren()) do if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
            root.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0,10,0); v.Humanoid.Health = 0
            RS.Remotes.CommF_:InvokeServer("StartQuest")
        end end
    end end end)

-- [Otros loops iguales: Boss, Fruit, Raid, Extras... (abreviado por espacio - copia completo de v3 si necesitas)]

-- ‚ö° HACKS REAL-TIME (con anim speed visual)
RunS.Heartbeat:Connect(function()
    if Settings.GodMode then hum.Health = hum.MaxHealth end
    hum.WalkSpeed = Settings.Speed; hum.JumpPower = Settings.JumpP or (Settings.InfJump and 999)
    if Settings.InfYield then hum.Energy = 100 end; if Settings.FPSBoost then setfpscap(999) end
end)

-- üé® ANIMACIONES PERSONALIZADAS FUNCTIONS
local function PulseGlow(obj, enabled)
    local ti = TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
    TS:Create(obj, ti, {Size = enabled and UDim2.new(1.1,0,1.1,0) or UDim2.new(1,0,1,0)}):Play()
    TS:Create(obj.UIStroke, ti, {Thickness = enabled and 3 or 1, Color = enabled and Color3.new(0,1,0) or Color3.new(1,1,1)}):Play()
end

local function HoverEffect(btn)
    btn.MouseEnter:Connect(function()
        TS:Create(btn, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(1.05,0,1.05,0)}):Play()
        local glow = Instance.new("UIStroke", btn); glow.Thickness = 2; glow.Color = Color3.new(0,1,1)
        TS:Create(glow, TweenInfo.new(0.4, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {Transparency = 0}):Play()
        SS:PlayLocalSound("rbxassetid://131961136", 0.5) -- Sonido hover
    end)
    btn.MouseLeave:Connect(function()
        TS:Create(btn, TweenInfo.new(0.2, Enum.EasingStyle.Quad), {Size = UDim2.new(1,0,1,0)}):Play()
    end)
end

local function SlideIn(frame)
    frame.Position = UDim2.new(-0.5, 0, 0.5, 0)
    TS:Create(frame, TweenInfo.new(0.8, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Position = UDim2.new(0,0,0,0)}):Play()
end

local function RainbowSlider(slider)
    spawn(function()
        while slider.Parent do wait(0.5)
            TS:Create(slider, TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut), 
                {BackgroundColor3 = Color3.fromHSV(tick() % 5 / 5, 1, 1)}):Play()
        end
    end)
end

-- üéÆ RAYFIELD CON ANIMACIONES CUSTOM (Carga lib + hooks)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
    Name = "üåü ZERO HUB ULTRA v4.0 ‚ú®", LoadingTitle = "Animando √âpico...", LoadingSubtitle = "por Grok - Animaciones PRO",
    ConfigurationSaving = {Enabled = true, FolderName = "ZeroHubUltraV4", FileName = "AnimSettings"},
    KeySystem = false
})

-- üè¥‚Äç‚ò†Ô∏è TABS CON BOUNCE
local FarmTab = Window:CreateTab("üöÄ Farm Principal", 4483362458)
local FruitTab = Window:CreateTab("üçé Fruit & Sea", 981064026)
local TPTab = Window:CreateTab("üó∫Ô∏è Teleports", 10734973434)
local CombatTab = Window:CreateTab("‚öîÔ∏è Combat/Hacks", 10734973420)
local ExtraTab = Window:CreateTab("üåà Extras", 10734973421)

-- Ejemplo Toggles CON ANIM PULSE
FarmTab:CreateToggle({Name = "Auto Farm Nivel + Quest", CurrentValue = false, Flag = "FarmNivel", 
    Callback = function(v) Settings.FarmNivel = v; PulseGlow(script.Parent, v) end})
FarmTab:CreateToggle({Name = "Auto Boss Farm", CurrentValue = false, Flag = "FarmBoss", 
    Callback = function(v) Settings.FarmBoss = v; PulseGlow(script.Parent, v) end})

-- Sliders CON RAINBOW
CombatTab:CreateSlider({Name = "Walk Speed", Range = {16,999}, Increment = 10, CurrentValue = 200, Flag = "Speed", 
    Callback = function(v) Settings.Speed = v end})
-- Hook rainbow en slider (post-create)
wait(1); RainbowSlider(CombatTab.Flags.Speed) -- Ejemplo hook

-- Buttons CON HOVER
TPTab:CreateButton({Name = "TP Sea1", Callback = function() root.CFrame = TPs["Sea1"] end})
-- Hook hover en todos buttons
for _, tab in pairs({FarmTab, FruitTab, TPTab, CombatTab, ExtraTab}) do
    for _, elem in pairs(tab.Container:GetChildren()) do
        if elem:IsA("TextButton") then HoverEffect(elem) end
    end
end

