-- Sea 1 Farm Extra (Mini-Script Integrado)
local Sea1Tab = Window:CreateTab("üåä Sea 1 Farm PRO", 4483362458)
Sea1Tab:CreateToggle({
   Name = "Auto Farm Sea 1 (Bandits/Monkeys)",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().Sea1Farm = Value
      spawn(function()
         while getgenv().Sea1Farm do
            for _, enemy in pairs(workspace.Enemies:GetChildren()) do
               if enemy.Name:find("Bandit") or enemy.Name:find("Monkey") and enemy.Humanoid.Health > 0 then
                  game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = enemy.HumanoidRootPart.CFrame
               end
            end
            task.wait(0.1)
         end
      end)
   end,
})

-- Teleports Sea 1
local TeleTab = Window:CreateTab("üó∫Ô∏è Teleports Sea 1", 4483362458)
TeleTab:CreateButton({Name = "Marine Starter", Callback = function() game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(36, 7, 16) end})
TeleTab:CreateButton({Name = "Jungle", Callback = function() game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-1604, 36, 142) end})
TeleTab:CreateButton({Name = "Rejoin Anti-AFK", Callback = function() game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer) end})

