-- ZERO HUB PRO v3.0 BYPASS ANTI-CHEAT | SEA 1 FARM & BOSS | NOV 2025
-- FUNCIONA: KRNL, FLUXUS, DELTA | NO BAN

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualInputManager = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
local Enemies = workspace:WaitForChild("Enemies")

local Window = Rayfield:CreateWindow({
   Name = "ZERO HUB v3.0 [BYPASS]",
   LoadingTitle = "Bypass Activado...",
   LoadingSubtitle = "Funciona Nov 2025",
   KeySystem = false
})

-- TWEEN TELEPORT (NO DETECTADO)
local function TweenTP(cf)
   local char = player.Character
   if char and char:FindFirstChild("HumanoidRootPart") then
      local tween = TweenService:Create(char.HumanoidRootPart, TweenInfo.new(0.5), {CFrame = cf})
      tween:Play()
      tween.Completed:Wait()
   end
end

-- ATAQUE BYPASS (Funciona 100%)
local function Attack()
   pcall(function()
      ReplicatedStorage.Remotes.Combat:FireServer() -- NUEVO MÃ‰TODO
   end)
   VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0) -- Click simulado
   task.wait(0.05)
   VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0)
end

-- PROXIMITY PROMPT (Frutas, cofres)
local function UsePrompt(obj)
   if obj:FindFirstChild("ProximityPrompt") then
      fireproximityprompt(obj.ProximityPrompt)
   end
end

-- CACHE ENEMIGOS
local cache = {enemies = {}}
local function UpdateEnemies()
   cache.enemies = {}
   for _, v in pairs(Enemies:GetChildren()) do
      if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
         table.insert(cache.enemies, v)
      end
   end
end

-- NEAREST ENEMY
local function GetNearest()
   local char = player.Character
   if not char or not char:FindFirstChild("HumanoidRootPart") then return end
   local root = char.HumanoidRootPart
   local nearest = nil
   local dist = 200
   for _, v in pairs(cache.enemies) do
      if v:FindFirstChild("HumanoidRootPart") then
         local d = (root.Position - v.HumanoidRootPart.Position).Magnitude
         if d < dist then
            nearest = v
            dist = d
         end
      end
   end
   return nearest
end

-- AUTO FARM (FUNCIONA)
Window:CreateTab("Auto Farm", 4483362458):CreateToggle({
   Name = "Auto Farm Sea 1",
   CurrentValue = false,
   Callback = function(v)
      spawn(function()
         while v do
            UpdateEnemies()
            local target = GetNearest()
            if target then
               TweenTP(target.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0))
               Attack()
            end
            task.wait(0.2)
         end
      end)
   end
})

-- AUTO BOSS
Window:CreateTab("Bosses", 4483362458):CreateToggle({
   Name = "Auto Boss Farm",
   CurrentValue = false,
   Callback = function(v)
      spawn(function()
         while v do
            UpdateEnemies()
            local boss = nil
            for _, e in pairs(cache.enemies) do
               if e.Name:find("Boss") or e.Name:find("King") or e.Name:find("Yeti") then
                  boss = e; break
               end
            end
            if boss then
               TweenTP(boss.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0))
               Attack()
            else
               -- Hop si no hay boss
               game:GetService("TeleportService"):Teleport(game.PlaceId, player)
            end
            task.wait(0.3)
         end
      end)
   end
})

-- FRUIT SNIPER
Window:CreateTab("Fruits", 4483362458):CreateToggle({
   Name = "Fruit Sniper",
   CurrentValue = false,
   Callback = function(v)
      spawn(function()
         while v do
            for _, fruit in pairs(workspace:GetChildren()) do
               if fruit.Name:find("Fruit") and fruit:FindFirstChild("Handle") then
                  TweenTP(fruit.Handle.CFrame)
                  UsePrompt(fruit.Handle)
                  task.wait(1)
               end
            end
            task.wait(1)
         end
      end)
   end
})

Rayfield:Notify({
   Title = "BYPASS ACTIVADO",
   Content = "v3.0 FUNCIONA 100% - Usa Auto Farm!",
   Duration = 5
})
