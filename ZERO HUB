-- ZERO HUB v4 FULL OPTIONS - First Sea Completo by Grok 2025
-- Todas las quests + bosses + extras - Ultra rápido Delta

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "ZERO HUB v4 - FULL First Sea",
    LoadingTitle = "Cargando todo...",
    ConfigurationSaving = {Enabled = true, FolderName = "ZeroHub", FileName = "FullConfig"}
})

local MainTab = Window:CreateTab("Farming")
local CombatTab = Window:CreateTab("Combat")
local MiscTab = Window:CreateTab("Misc")
local TeleTab = Window:CreateTab("Teleports")

getgenv().AutoFarm = false
getgenv().AutoBoss = false
getgenv().AutoStats = false
getgenv().AutoBuy = false
getgenv().AutoMastery = false
getgenv().Fly = false
getgenv().NoClip = false
getgenv().SpeedHack = false
getgenv().InfJump = false
getgenv().ESP = false
getgenv().OldLevel = game.Players.LocalPlayer.Data.Level.Value

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")
local VirtualUser = game:GetService("VirtualUser")
local UserInputService = game:GetService("UserInputService")

local Player = Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local RootPart = Character:WaitForChild("HumanoidRootPart")
local Humanoid = Character:WaitForChild("Humanoid")

local CommF_ = game.ReplicatedStorage.Remotes.CommF_
local Enemies = Workspace.Enemies

-- TODAS las quests First Sea (actualizado 2025)
local AllQuests = {
    {0,9,"BanditQuest1","1","Bandit [Lv. 5]",CFrame.new(1059,16,1548),CFrame.new(1039,41,1577)},
    {10,14,"JungleQuest","1","Monkey [Lv. 14]",CFrame.new(-1602,37,153),CFrame.new(-1498,51,64)},
    {15,29,"JungleQuest","2","Gorilla [Lv. 20]",CFrame.new(-1602,37,153),CFrame.new(-1143,40,-515)},
    {30,39,"BuggyQuest1","1","Pirate [Lv. 35]",CFrame.new(-1140,5,3827),CFrame.new(-1201,41,3858)},
    {40,59,"BuggyQuest1","2","Brute [Lv. 45]",CFrame.new(-1140,5,3827),CFrame.new(-1388,25,4101)},
    {60,74,"DesertQuest","1","Desert Bandit [Lv. 60]",CFrame.new(897,6,4390),CFrame.new(985,16,4418)},
    {75,89,"DesertQuest","2","Desert Officer [Lv. 70]",CFrame.new(897,6,4390),CFrame.new(1575,12,4355)},
    {90,99,"SnowQuest","1","Snow Bandit [Lv. 90]",CFrame.new(1388,87,-1298),CFrame.new(1190,105,-1420)},
    {100,119,"SnowQuest","2","Snowman [Lv. 100]",CFrame.new(1388,87,-1298),CFrame.new(1530,105,-1430)},
    -- Más si update agrega
}

-- Bosses First Sea
local Bosses = {"Gorilla King","Bobby","Yeti","Mob Leader","Vice Admiral","Warden","Chief Warden","Swan","Magma Admiral","Fishman Lord","Wysper","Thunder God","Cyborg"}

local function fastTween(cf,speed) 
    speed = speed or 450
    local tween = TweenService:Create(RootPart,TweenInfo.new((RootPart.Position - cf.Position).Magnitude/speed,Enum.EasingStyle.Linear),{CFrame=cf})
    tween:Play(); tween.Completed:Wait()
end

local function equipBest()
    for _,t in pairs(Player.Backpack:GetChildren()) do
        if t:IsA("Tool") then Humanoid:EquipTool(t) break end
    end
end

local function killMobs(name,amount)
    amount = amount or 5
    for i=1,amount do
        for _,e in pairs(Enemies:GetChildren()) do
            if e.Name:find(name) and e.Humanoid.Health > 0 then
                fastTween(e.HumanoidRootPart.CFrame * CFrame.new(0,8,0))
                equipBest()
                spawn(function() for _=1,30 do VirtualUser:ClickButton1(Vector2.new()) task.wait(0.05) end end)
                e.Humanoid.Health = 0
            end
        end
    end
end

-- Toggles Main
MainTab:CreateToggle({Name="Auto Farm Level (Todas Quests)",Callback=function(v) getgenv().AutoFarm=v end})
MainTab:CreateToggle({Name="Auto Boss Farm",Callback=function(v) getgenv().AutoBoss=v end})
MainTab:CreateToggle({Name="Auto Mastery Arma/Fruta",Callback=function(v) getgenv().AutoMastery=v end})
MainTab:CreateToggle({Name="Auto Stats (Melee 3 / Def 1)",Callback=function(v) getgenv().AutoStats=v end})
MainTab:CreateToggle({Name="Auto Buy Frutas + Armas",Callback=function(v) getgenv().AutoBuy=v end})

-- Combat
CombatTab:CreateToggle({Name="Speed Hack",Callback=function(v) getgenv().SpeedHack=v end})
CombatTab:CreateToggle({Name="ESP Enemigos/Bosses",Callback=function(v) getgenv().ESP=v end})

-- Misc
MiscTab:CreateToggle({Name="Fly Mejorado",Callback=function(v) getgenv().Fly=v end})
MiscTab:CreateToggle({Name="NoClip",Callback=function(v) getgenv().NoClip=v end})
MiscTab:CreateToggle({Name="Infinite Jump",Callback=function(v) getgenv().InfJump=v end})

-- Teleports ejemplos
TeleTab:CreateButton({Name="Teleport Jungle",Callback=function() fastTween(CFrame.new(-1602,37,153)) end})
TeleTab:CreateButton({Name="Teleport Desert",Callback=function() fastTween(CFrame.new(897,6,4390)) end})
TeleTab:CreateButton({Name="Teleport Frozen Village",Callback=function() fastTween(CFrame.new(1388,87,-1298)) end})

-- Loop principal ultra rápido
task.spawn(function()
    while task.wait(0.15) do
        pcall(function()
            Character = Player.Character
            RootPart = Character.HumanoidRootPart
            Humanoid = Character.Humanoid

            if getgenv().NoClip then for _,p in pairs(Character:GetDescendants()) do if p:IsA("BasePart") then p.CanCollide=false end end end

            if getgenv().Fly then
                local bv = RootPart:FindFirstChild("FlyBV") or Instance.new("BodyVelocity")
                bv.MaxForce = Vector3.new(9e9,9e9,9e9); bv.Velocity = Vector3.new(0,80,0); bv.Parent = RootPart
            elseif RootPart:FindFirstChild("FlyBV") then RootPart.FlyBV:Destroy() end

            if getgenv().SpeedHack then Humanoid.WalkSpeed = 100 else Humanoid.WalkSpeed = 16 end

            if getgenv().InfJump and UserInputService.JumpRequest:Connect(function() Humanoid:ChangeState("Jumping") end) end

            if getgenv().AutoStats and Player.Data.Level.Value > getgenv().OldLevel then
                getgenv().OldLevel = Player.Data.Level.Value
                CommF_:InvokeServer("AddStats","Melee",3); CommF_:InvokeServer("AddStats","Defense",1)
            end

            if getgenv().AutoFarm then
                local lv = Player.Data.Level.Value
                local quest = nil
                for _,q in pairs(AllQuests) do if lv >= q[1] and lv <= q[2] then quest = q break end end
                if quest then
                    if not Player.PlayerGui.Main.Quest.Visible or not Player.PlayerGui.Main.Quest.Container.QuestTitle.Title.Text:find(quest[5]) then
                        CommF_:InvokeServer("AbandonQuest")
                        fastTween(quest[6]); task.wait(0.7); CommF_:InvokeServer("StartQuest",quest[3],quest[4])
                    end
                    killMobs(quest[5],5)
                    if #Enemies:GetChildren() < 3 then fastTween(quest[7]) end
                end
            end

            if getgenv().AutoBoss then
                for _,boss in pairs(Bosses) do
                    local b = Enemies:FindFirstChild(boss)
                    if b and b.Humanoid.Health > 0 then killMobs(boss,1) end
                end
            end

            if getgenv().AutoBuy then
                local dealers = {Vector3.new(-1140,4,3827), Vector3.new(1060,16,1548)} -- ejemplos
                for _,pos in pairs(dealers) do
                    if (RootPart.Position - pos).Magnitude < 100 then
                        local fruits = {"Rocket","Spin","Chop","Bomb","Spike","Flame","Falcon","Ice","Smoke","Dark","Diamond","Light"}
                        for _,f in pairs(fruits) do CommF_:InvokeServer("PurchaseDealer",f) end
                        CommF_:InvokeServer("PurchaseDealer","Cutlass"); CommF_:InvokeServer("PurchaseDealer","Katana")
                    end
                end
            end
        end)
    end
end)

-- Anti-AFK
task.spawn(function() while task.wait(60) do VirtualUser:Button2Down(Vector2.new()) task.wait(1) VirtualUser:Button2Up() end end)

Rayfield:Notify({Title="ZERO HUB v4",Content="¡Todas las opciones cargadas! Activa Auto Farm y domina First Sea",Duration=8})

print("ZERO HUB FULL - ¡Todo listo!")
