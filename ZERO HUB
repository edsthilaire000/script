-- Crear contenido para Farming (Sea 1)
local function CreateFarmingPage()
    -- Secci√≥n de Auto Farm
    local AutoFarmLabel = Instance.new("TextLabel")
    AutoFarmLabel.Name = "AutoFarmLabel"
    AutoFarmLabel.Parent = FarmingPage
    AutoFarmLabel.BackgroundTransparency = 1
    AutoFarmLabel.Position = UDim2.new(0, 10, 0, 10)
    AutoFarmLabel.Size = UDim2.new(1, -20, 0, 20)
    AutoFarmLabel.Font = Enum.Font.GothamBold
    AutoFarmLabel.Text = "üó°Ô∏è Auto Farm"
    AutoFarmLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    AutoFarmLabel.TextSize = 16
    AutoFarmLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Auto Farm Principal
    local AutoFarmToggle = CreateToggle("Auto Farm Level", UDim2.new(0, 10, 0, 40))
    local AutoQuestToggle = CreateToggle("Auto Quest", UDim2.new(0, 10, 0, 90))
    local NearestFarmToggle = CreateToggle("Nearest Farm Mode", UDim2.new(0, 10, 0, 140))
    
    -- Secci√≥n de Configuraci√≥n de Farm
    local FarmConfigLabel = Instance.new("TextLabel")
    FarmConfigLabel.Name = "FarmConfigLabel"
    FarmConfigLabel.Parent = FarmingPage
    FarmConfigLabel.BackgroundTransparency = 1
    FarmConfigLabel.Position = UDim2.new(0, 10, 0, 200)
    FarmConfigLabel.Size = UDim2.new(1, -20, 0, 20)
    FarmConfigLabel.Font = Enum.Font.GothamBold
    FarmConfigLabel.Text = "‚öôÔ∏è Farm Config"
    FarmConfigLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    FarmConfigLabel.TextSize = 16
    FarmConfigLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Toggles de Configuraci√≥n
    local AutoBusoToggle = CreateToggle("Auto Buso", UDim2.new(0, 10, 0, 230))
    local AutoKenToggle = CreateToggle("Auto Ken", UDim2.new(0, 10, 0, 280))
    local FastAttackToggle = CreateToggle("Fast Attack", UDim2.new(0, 10, 0, 330))
    
    -- Secci√≥n de Bosses (Sea 1)
    local BossLabel = Instance.new("TextLabel")
    BossLabel.Name = "BossLabel"
    BossLabel.Parent = FarmingPage
    BossLabel.BackgroundTransparency = 1
    BossLabel.Position = UDim2.new(0, 10, 0, 390)
    BossLabel.Size = UDim2.new(1, -20, 0, 20)
    BossLabel.Font = Enum.Font.GothamBold
    BossLabel.Text = "üëë Auto Boss"
    BossLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    BossLabel.TextSize = 16
    BossLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Toggles de Bosses Sea 1
    local AutoBossToggle = CreateToggle("Auto All Boss", UDim2.new(0, 10, 0, 420))
    local SelectBossLabel = Instance.new("TextLabel")
    SelectBossLabel.Name = "SelectBossLabel"
    SelectBossLabel.Parent = FarmingPage
    SelectBossLabel.BackgroundTransparency = 1
    SelectBossLabel.Position = UDim2.new(0, 10, 0, 470)
    SelectBossLabel.Size = UDim2.new(1, -20, 0, 20)
    SelectBossLabel.Font = Enum.Font.GothamSemibold
    SelectBossLabel.Text = "Select Boss:"
    SelectBossLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    SelectBossLabel.TextSize = 14
    SelectBossLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Lista de Bosses Sea 1
    local Sea1Bosses = {
        "The Gorilla King",
        "Bobby",
        "Yeti",
        "Mob Leader",
        "Vice Admiral",
        "Warden",
        "Chief Warden",
        "Swan",
        "Magma Admiral",
        "Fishman Lord",
        "Wysper",
        "Thunder God",
        "Cyborg",
        "Saber Expert"
    }

    -- Crear toggles para cada boss
    for i, bossName in ipairs(Sea1Bosses) do
        local BossToggle = CreateToggle(bossName, UDim2.new(0, 10, 0, 500 + ((i-1) * 50)))
        BossToggle.Parent = FarmingPage
    end

    -- Configurar el ScrollingFrame
    FarmingPage.CanvasSize = UDim2.new(0, 0, 0, 500 + (#Sea1Bosses * 50) + 50)
end

-- Llamar a la funci√≥n para crear la p√°gina de farming
CreateFarmingPage()

-- A√±adir funcionalidades de farming
local function StartAutoFarm()
    while getgenv().AutoFarmEnabled do
        -- Aqu√≠ va la l√≥gica de auto farm para Sea 1
        wait()
    end
end

local function StartAutoBoss()
    while getgenv().AutoBossEnabled do
        -- Aqu√≠ va la l√≥gica de auto boss para Sea 1
        wait()
    end
end

-- Eventos para los toggles
for _, toggle in pairs(FarmingPage:GetChildren()) do
    if toggle:IsA("Frame") and toggle.Name:match("Toggle$") then
        local toggleName = toggle.Name:gsub("Toggle$", "")
        toggle.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                if toggleName == "AutoFarmLevel" then
                    getgenv().AutoFarmEnabled = not getgenv().AutoFarmEnabled
                    if getgenv().AutoFarmEnabled then
                        StartAutoFarm()
                    end
                elseif toggleName == "AutoAllBoss" then
                    getgenv().AutoBossEnabled = not getgenv().AutoBossEnabled
                    if getgenv().AutoBossEnabled then
                        StartAutoBoss()
                    end
                end
                -- A√±adir m√°s funcionalidades seg√∫n sea necesario
            end
        end)
    end
end
