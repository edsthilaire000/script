-- ZERO HUB PRO v2.3 SEA 1 BOSS FARM | Detecta + Mata Auto | Anti-Lag | Gravity 2025
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- SERVICES + CACHE OPTIMIZADO
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualUser = game:GetService("VirtualUser")
local TeleportService = game:GetService("TeleportService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local CommF_ = ReplicatedStorage.Remotes.CommF_
local Enemies = workspace:WaitForChild("Enemies")
local cache = { bosses = {}, lastUpdate = 0 }

local Window = Rayfield:CreateWindow({
   Name = "ðŸŸ¢ ZERO HUB PRO v2.3 [SEA 1 BOSS FARM]",
   LoadingTitle = "Cargando Boss Farm...",
   LoadingSubtitle = "16 Bosses Auto | Lvl 700 RÃ¡pido",
   ConfigurationSaving = { Enabled = true, FolderName = "ZeroHubBossSea1", FileName = "Config" },
   KeySystem = false
})

-- BOSSES SEA 1 DATA (Names + Teleports Exactos 2025)<grok-card data-id="5bd6c5" data-type="citation_card"></grok-card>
local BossData = {
   ["Gorilla King"] = CFrame.new(-1604, 36, 142),  -- Jungle
   ["Bobby"] = CFrame.new(1061, 16, 1547),  -- Pirate Village
   ["Yeti"] = CFrame.new(1397, 37, -988),  -- Frozen Village
   ["Vice Admiral"] = CFrame.new(487, 29, 645),  -- Prison
   ["Warden"] = CFrame.new(487, 29, 645),
   ["Chief Warden"] = CFrame.new(487, 29, 645),
   ["Flamingo"] = CFrame.new(-2888, 43, 5580),  -- Green Zone
   ["Greybeard"] = CFrame.new(487, 29, 645),  -- Prison Raid
   ["Saw"] = CFrame.new(-2682, 126, 2051),  -- Middle Town (75min)
   ["Cyborg"] = CFrame.new(-2430, 71, 4945),  -- Fountain City
   -- AÃ±ade mÃ¡s: "Captain Elephant", "Beautiful Pirate", etc. (script detecta auto)
}

-- UPDATE CACHE BOSSES (0.5s throttle)
local function updateCache()
   if tick() - cache.lastUpdate < 0.5 then return end
   cache.bosses = {}
   for _, enemy in ipairs(Enemies:GetChildren()) do
      local name = enemy.Name
      if enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 and (
         name:find("Gorilla") or name:find("Bobby") or name:find("Yeti") or name:find("Vice") or
         name:find("Warden") or name:find("Chief") or name:find("Flamingo") or name:find("Greybeard") or
         name:find("Saw") or name:find("Cyborg") or name:find("Elephant") or name:find("Beautiful Pirate")) then
         table.insert(cache.bosses, enemy)
      end
   end
   cache.lastUpdate = tick()
end

-- NEAREST BOSS
local function getNearestBoss()
   local char = player.Character
   if not char or not char:FindFirstChild("HumanoidRootPart") then return nil end
   local root = char.HumanoidRootPart
   local nearest, dist = nil, math.huge
   for _, boss in ipairs(cache.bosses) do
      if boss:FindFirstChild("HumanoidRootPart") then
         local bDist = (root.Position - boss.HumanoidRootPart.Position).Magnitude
         if bDist < dist and bDist < 300 then
            nearest, dist = boss, bDist
         end
      end
   end
   return nearest
end

local function TeleportTo(cf)
   local char = player.Character
   if char and char:FindFirstChild("HumanoidRootPart") then
      char.HumanoidRootPart.CFrame = cf * CFrame.new(0, 10, 0)  -- Safe TP
   end
end

-- AUTO ATTACK BOSS (Kill Aura + Clicks)
local function attackBoss(boss)
   TeleportTo(boss.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0))
   VirtualUser:CaptureController()
   VirtualUser:ClickButton1(Vector2.new())
   pcall(function()
      CommF_:InvokeServer("1", "1")  -- Skill spam
   end)
end

local MainTab = Window:CreateTab("ðŸ´â€â˜ ï¸ Auto Boss Farm", 4483362458)
MainTab:CreateSection("Farm 16 Bosses Sea 1")

local toggles = { AutoBossFarm = false, KillAuraBoss = false, HopIfNoSpawn = true }

-- AUTO FARM BOSSES (Detecta + Mata + Rejoin)
MainTab:CreateToggle({
   Name = "Auto Farm Todos Bosses Sea 1",
   CurrentValue = false,
   Callback = function(Value)
      toggles.AutoBossFarm = Value
      spawn(function()
         while toggles.AutoBossFarm do
            updateCache()
            local target = getNearestBoss()
            if target then
               attackBoss(target)
            else
               -- No boss? Tele a random spawn + wait
               for name, cf in pairs(BossData) do
                  TeleportTo(cf)
                  task.wait(2)
                  updateCache()
                  if getNearestBoss() then break end
               end
               if toggles.HopIfNoSpawn then
                  TeleportService:Teleport(game.PlaceId, player)  -- Hop server
                  break
               end
            end
            task.wait(0.2)
         end
      end)
   end,
})

-- Kill Aura EspecÃ­fico Bosses
MainTab:CreateToggle({
   Name = "Kill Aura Bosses (360Â° Auto)",
   CurrentValue = false,
   Callback = function(Value)
      toggles.KillAuraBoss = Value
      spawn(function()
         while toggles.KillAuraBoss do
            local target = getNearestBoss()
            if target then attackBoss(target) end
            task.wait(0.1)
         end
      end)
   end,
})

-- Selector Boss Manual
MainTab:CreateDropdown({
   Name = "Tele a Boss EspecÃ­fico",
   Options = {"Gorilla King", "Bobby", "Yeti", "Vice Admiral", "Warden", "Chief Warden", "Flamingo", "Greybeard", "Saw", "Cyborg"},
   CurrentOption = "Gorilla King",
   Callback = function(Option)
      if BossData[Option] then TeleportTo(BossData[Option]) end
   end,
})

