local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")
local TeleportService = game:GetService("TeleportService")

local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

-- âš¡ HACKS BÃSICOS
hum.WalkSpeed = 200  -- Speed alta
hum.JumpPower = 100  -- Jump alto

-- ðŸ“ TELEPORTS (edita coords para tu isla)
local Teleports = {
    ["Inicio"] = CFrame.new(0, 100, 0),  -- Ejemplo, cambia por islas reales
    ["Quest1"] = CFrame.new(-1000, 50, 1000),
    -- Agrega mÃ¡s: Marine Fortress, etc. Busca coords en YouTube
}

-- ðŸ”„ AUTO FARM PRINCIPAL
local Farming = false
spawn(function()
    while true do
        wait(0.1)
        if Farming then
            -- Mata enemigos cercanos (Farm Nivel/Mastery)
            for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
                if enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                    root.CFrame = enemy.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0)
                    game:GetService("VirtualUser"):CaptureController()
                    game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                    enemy.Humanoid.Health = 0  -- Kill instant
                end
            end
            
            -- Auto Quest (simula click en NPC Quest)
            -- Reemplaza "QuestNPC" por nombre real del NPC
            local questNPC = Workspace.NPCs:FindFirstChild("Quest Giver")  -- Edita
            if questNPC then
                fireclickdetector(questNPC.ClickDetector)
            end
        end
    end
end)

-- ðŸŽ® GUI SIMPLE (Rayfield-like con toggle)
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local FarmToggle = Instance.new("TextButton")

ScreenGui.Parent = player:WaitForChild("PlayerGui")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.new(0, 0, 0)
Frame.BorderSizePixel = 0

FarmToggle.Parent = Frame
FarmToggle.Size = UDim2.new(1, 0, 0.5, 0)
FarmToggle.Text = "ðŸš€ AUTO FARM: OFF"
FarmToggle.BackgroundColor3 = Color3.new(1, 0, 0)

FarmToggle.MouseButton1Click:Connect(function()
    Farming = not Farming
    FarmToggle.Text = Farming and "ðŸš€ AUTO FARM: ON" or "ðŸš€ AUTO FARM: OFF"
    FarmToggle.BackgroundColor3 = Farming and Color3.new(0, 1, 0) or Color3.new(1, 0, 0)
end)

-- Anti-AFK
spawn(function()
    while true do wait(60) 
        local args = { [2] = { [1] = { ["sin"] = "420", ["cos"] = "69" } } }
        ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("Farmando con Grok Hub", "All")
    end
end)

