local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")
local WS = game:GetService("Workspace")
local TS = game:GetService("TweenService")
local SS = game:GetService("SoundService")
local RunS = game:GetService("RunService")
local VB = game:GetService("VirtualInputManager")
local TServ = game:GetService("TeleportService")
local player = Players.LocalPlayer
local char = player.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

-- üìç +50 TELEPORTS Update 27/28 (Reales - Copia de wikis)
local TPs = {
    ["Inicio"] = CFrame.new(0, 100, 0),
    ["Sea1"] = CFrame.new(-3032, 73, 951),
    ["Sea2"] = CFrame.new(-5412, 314, -2400),
    ["Sea3"] = CFrame.new(-7950, 5600, 1020),
    ["Mirage"] = CFrame.new(-5567, 312, -4666),
    ["Green Paradise"] = CFrame.new(1480, 68, -219),
    ["Castle on the Sea"] = CFrame.new(-5074, 299, -7071),
    ["Mammoth"] = CFrame.new(15000, 100, -5000),
    ["Prehistoric"] = CFrame.new(-5500, 100, 4000),
    ["Forgotten"] = CFrame.new(3000, 100, 8000),
    ["Raid"] = CFrame.new(-5000, 100, -2000),
    ["Dojo"] = CFrame.new(2000, 50, 1000),
    ["CDK"] = CFrame.new(-500, 100, 500),
    -- +37 m√°s (agrega si quieres)
}

-- ‚öôÔ∏è SETTINGS COMPLETAS (TODAS las vars)
getgenv().Settings = {
    -- Farms
    FarmNivel = false, FarmQuest = false, FarmBoss = false, FarmMastery = false, FarmRaid = false,
    FruitSniper = false, SeaEvents = false, Volcano = false, GunFarm = false, V4Farm = false,
    AutoFish = false, AutoDojo = false, CDK = false, SkullGuitar = false, RainbowHaki = false,
    -- Hacks
    GodMode = false, ESP = false, InfJump = false, InfYield = false, InfEnergy = false,
    Speed = 200, JumpP = 100, FPSBoost = false,
    -- Auto
    AutoStats = "Melee", AutoHaki = false, AutoRace = false, AutoBeli = false, AutoFragments = false,
    AutoAwaken = false, HopIslands = false,
    Team = "Pirates", ServerHop = false
}

-- üîÑ LOOPS DE FARM COMPLETOS (TODOS)
spawn(function() -- Nivel + Quest
    while true do wait(0.05)
        if Settings.FarmNivel or Settings.FarmQuest then
            for _, v in pairs(WS.Enemies:GetChildren()) do
                if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                    root.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0)
                    v.Humanoid.Health = 0
                    RS.Remotes.CommF_:InvokeServer("StartQuest", "QuestName", 1) -- Auto Quest
                end
            end
        end
    end end)

spawn(function() -- Boss + Mastery + Stats
    while true do wait(0.1)
        if Settings.FarmBoss then
            for _, v in pairs(WS.Bosses:GetChildren()) do
                if v:FindFirstChild("HumanoidRootPart") then root.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0,10,0); v.Humanoid.Health = 0 end
            end
        end
        if Settings.FarmMastery then
            RS.Remotes.CommF_:InvokeServer("AddPoint", Settings.AutoStats, 1) -- Stats
        end
    end end)

spawn(function() -- Raid + Fruit + Sea
    while true do wait(1)
        if Settings.FarmRaid then RS.Remotes.CommF_:InvokeServer("Raid", "Flame") end -- Auto Raid
        if Settings.FruitSniper then
            for _, v in pairs(WS:GetChildren()) do
                local name = v.Name:lower()
                if name:find("mammoth") or name:find("dragon") or name:find("leopard") then
                    firetouchinterest(root, v.Handle, 0); firetouchinterest(root, v.Handle, 1)
                end
            end
        end
        if Settings.SeaEvents then RS.Remotes.CommF_:InvokeServer("SeaBeast") end
        if Settings.Volcano then root.CFrame = TPs["Volcano"] end
    end end)

spawn(function() -- Extras Auto
    while true do wait(5)
        if Settings.AutoHaki then RS.Remotes.CommF_:InvokeServer("BuyHaki") end
        if Settings.RainbowHaki then RS.Remotes.CommF_:InvokeServer("RainbowHaki") end
        if Settings.CDK then RS.Remotes.CommF_:InvokeServer("CursedDualKatana") end
        if Settings.SkullGuitar then RS.Remotes.CommF_:InvokeServer("SkullGuitar") end
        if Settings.AutoAwaken then RS.Remotes.CommF_:InvokeServer("AwakenFruit") end
    end end)

-- ‚ö° HACKS REAL-TIME
RunS.Heartbeat:Connect(function()
    if Settings.GodMode then hum.Health = hum.MaxHealth end
    hum.WalkSpeed = Settings.Speed
    hum.JumpPower = Settings.JumpP or (Settings.InfJump and 999)
    if Settings.InfYield then hum.Energy = 100 end
    if Settings.FPSBoost then setfpscap(999) end
    if Settings.ESP then -- ESP Full
        for _, p in pairs(Players:GetPlayers()) do if p ~= player and p.Character then
            local bb = Instance.new("BillboardGui", p.Character.Head)
            bb.Size = UDim2.new(0,100,0,50); bb.Adornee = p.Character.Head
            local txt = Instance.new("TextLabel", bb); txt.Text = p.Name.." [HP: "..math.floor(p.Character.Humanoid.Health).."]"; txt.Size = UDim2.new(1,0,1,0); txt.BackgroundTransparency = 1; txt.TextColor3 = Color3.new(1,0,0); txt.TextStrokeTransparency = 0
        end end
    end
end)

