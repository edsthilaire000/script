-- ESP Bosses
local ESPTab = Window:CreateTab("ðŸ‘ï¸ ESP Bosses", 4483362458)
ESPTab:CreateToggle({
   Name = "ESP Solo Bosses (Rojo Gigante)",
   CurrentValue = false,
   Callback = function(Value)
      for _, boss in ipairs(Enemies:GetChildren()) do
         local head = boss:FindFirstChild("Head")
         if head and (boss.Name:find("Boss") or boss.Name:find("King") or boss.Name:find("Yeti")) then
            local gui = head:FindFirstChild("BossESP")
            if Value and not gui then
               gui = Instance.new("BillboardGui", head)
               gui.Name = "BossESP"
               gui.Size = UDim2.new(0, 200, 0, 100)
               gui.StudsOffset = Vector3.new(0, 3, 0)
               local text = Instance.new("TextLabel", gui)
               text.Size = UDim2.new(1, 0, 1, 0)
               text.BackgroundTransparency = 1
               text.Text = boss.Name .. " [HP: " .. math.floor(boss.Humanoid.Health) .. "]"
               text.TextColor3 = Color3.new(1, 0, 0)
               text.TextStrokeTransparency = 0
               text.TextScaled = true
            elseif not Value and gui then
               gui:Destroy()
            end
         end
      end
   end,
})

