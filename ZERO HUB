local Mouse = Player:GetMouse()

-- CONFIGURACI√ìN GLOBAL
getgenv().ZERO_HUB = {
    AutoFarm = true,
    AutoBuso = true,
    AutoClick = true,
    AutoRaid = false,
    AutoSabi = false,
    AutoKen = false,
    AutoHaki = true,
    Noclip = false,
    InfEnergy = false,
    FastAttack = true,
    AutoQuests = false
}

-- INTERFAZ GR√ÅFICA
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TopBar = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local CloseBtn = Instance.new("TextButton")
local TabsFrame = Instance.new("Frame")
local ContentFrame = Instance.new("Frame")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "ZERO_HUB_V3"

MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 25)
MainFrame.Position = UDim2.new(0.3, 0, 0.25, 0)
MainFrame.Size = UDim2.new(0, 600, 0, 450)
MainFrame.Active = true
MainFrame.Draggable = true

TopBar.Parent = MainFrame
TopBar.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
TopBar.Size = UDim2.new(1, 0, 0, 40)

Title.Parent = TopBar
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "ZERO HUB v3.0 | Blox Fruits"
Title.TextColor3 = Color3.fromRGB(0, 255, 255)
Title.TextSize = 18

TabsFrame.Parent = MainFrame
TabsFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
TabsFrame.Position = UDim2.new(0, 0, 0, 40)
TabsFrame.Size = UDim2.new(0, 150, 0, 410)

ContentFrame.Parent = MainFrame
ContentFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
ContentFrame.Position = UDim2.new(0, 150, 0, 40)
ContentFrame.Size = UDim2.new(0, 450, 0, 410)

-- FUNCIONES B√ÅSICAS
function CreateButton(parent, text, position, callback)
    local Button = Instance.new("TextButton")
    Button.Parent = parent
    Button.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    Button.Position = position
    Button.Size = UDim2.new(0, 200, 0, 35)
    Button.Font = Enum.Font.Gotham
    Button.Text = text
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.TextSize = 14
    Button.MouseButton1Click:Connect(callback)
    return Button
end

function CreateToggle(parent, text, position, callback)
    local ToggleFrame = Instance.new("Frame")
    local ToggleBtn = Instance.new("TextButton")
    local Status = Instance.new("TextLabel")
    
    ToggleFrame.Parent = parent
    ToggleFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    ToggleFrame.Position = position
    ToggleFrame.Size = UDim2.new(0, 200, 0, 30)
    
    ToggleBtn.Parent = ToggleFrame
    ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    ToggleBtn.Position = UDim2.new(0, 5, 0, 5)
    ToggleBtn.Size = UDim2.new(0, 50, 0, 20)
    ToggleBtn.Font = Enum.Font.Gotham
    ToggleBtn.Text = "OFF"
    ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleBtn.TextSize = 12
    
    Status.Parent = ToggleFrame
    Status.BackgroundTransparency = 1
    Status.Position = UDim2.new(0, 60, 0, 0)
    Status.Size = UDim2.new(0, 135, 0, 30)
    Status.Font = Enum.Font.Gotham
    Status.Text = text
    Status.TextColor3 = Color3.fromRGB(255, 255, 255)
    Status.TextSize = 12
    Status.TextXAlignment = Enum.TextXAlignment.Left
    
    local state = false
    
    ToggleBtn.MouseButton1Click:Connect(function()
        state = not state
        if state then
            ToggleBtn.BackgroundColor3 = Color3.fromRGB(50, 255, 50)
            ToggleBtn.Text = "ON"
        else
            ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
            ToggleBtn.Text = "OFF"
        end
        callback(state)
    end)
    
    return ToggleFrame
end

-- SISTEMA DE TABS
local Tabs = {}
function CreateTab(name)
    local TabButton = CreateButton(TabsFrame, name, UDim2.new(0, 10, 0, 10 + (#Tabs * 40)), function() end)
    local TabContent = Instance.new("ScrollingFrame")
    TabContent.Parent = ContentFrame
    TabContent.BackgroundTransparency = 1
    TabContent.Size = UDim2.new(1, 0, 1, 0)
    TabContent.ScrollBarThickness = 4
    TabContent.Visible = false
    
    Tabs[name] = TabContent
    return TabContent
end

-- CREAR TABS PRINCIPALES
local FarmingTab = CreateTab("‚ö° FARMING")
local AutoTab = CreateTab("ü§ñ AUTO SYSTEM")
local TeleportTab = CreateTab("üìç TELEPORTS")
local PlayerTab = CreateTab("üë§ PLAYER")
local RaidTab = CreateTab("‚öîÔ∏è RAID SYSTEM")
local MiscTab = CreateTab("üîß MISC")

-- ACTIVAR PRIMER TAB
Tabs["‚ö° FARMING"].Visible = true

-- ========== üöÄ SISTEMA DE FARMING ==========
CreateToggle(FarmingTab, "Auto Farm Normal", UDim2.new(0, 10, 0, 10), function(state)
    getgenv().ZERO_HUB.AutoFarm = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoFarm and wait(0.3) do
                pcall(function()
                    local enemies = workspace:FindFirstChild("Enemies")
                    if enemies then
                        for _, enemy in pairs(enemies:GetChildren()) do
                            if getgenv().ZERO_HUB.AutoFarm and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                                Player.Character:SetPrimaryPartCFrame(enemy.HumanoidRootPart.CFrame * CFrame.new(0, 0, -8))
                                wait(0.2)
                                for _, tool in pairs(Player.Character:GetChildren()) do
                                    if tool:IsA("Tool") then
                                        tool:Activate()
                                    end
                                end
                            end
                        end
                    end
                end)
            end
        end)
    end
end)

CreateToggle(FarmingTab, "Auto Farm Bosses", UDim2.new(0, 10, 0, 50), function(state)
    getgenv().AutoFarmBoss = state
    if state then
        spawn(function()
            while getgenv().AutoFarmBoss and wait(0.5) do
                pcall(function()
                    local bosses = {"Deandre", "Urban", "Diablo", "Swan", "Cursed Captain"}
                    for _, bossName in pairs(bosses) do
                        local boss = workspace:FindFirstChild(bossName)
                        if boss and boss:FindFirstChild("Humanoid") and boss.Humanoid.Health > 0 then
                            Player.Character:SetPrimaryPartCFrame(boss.HumanoidRootPart.CFrame * CFrame.new(0, 0, -10))
                            wait(0.3)
                            for _, tool in pairs(Player.Character:GetChildren()) do
                                if tool:IsA("Tool") then
                                    tool:Activate()
                                end
                            end
                        end
                    end
                end)
            end
        end)
    end
end)

CreateToggle(FarmingTab, "Auto Collect Drops", UDim2.new(0, 10, 0, 90), function(state)
    getgenv().AutoCollect = state
    if state then
        spawn(function()
            while getgenv().AutoCollect and wait(1) do
                pcall(function()
                    for _, item in pairs(workspace:GetChildren()) do
                        if item:IsA("Tool") or item.Name:find("Fruit") then
                            firetouchinterest(Player.Character.HumanoidRootPart, item, 0)
                            firetouchinterest(Player.Character.HumanoidRootPart, item, 1)
                        end
                    end
                end)
            end
        end)
    end
end)

-- ========== ü§ñ SISTEMA AUTOM√ÅTICO ==========
CreateToggle(AutoTab, "Auto Buso Haki", UDim2.new(0, 10, 0, 10), function(state)
    getgenv().ZERO_HUB.AutoBuso = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoBuso and wait(10) do
                pcall(function()
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Buso")
                end)
            end
        end)
    end
end)

CreateToggle(AutoTab, "Auto Ken Haki", UDim2.new(0, 10, 0, 50), function(state)
    getgenv().ZERO_HUB.AutoKen = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoKen and wait(5) do
                pcall(function()
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Ken")
                end)
            end
        end)
    end
end)

CreateToggle(AutoTab, "Auto Sabi Haki", UDim2.new(0, 10, 0, 90), function(state)
    getgenv().ZERO_HUB.AutoSabi = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoSabi and wait(15) do
                pcall(function()
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Sabi")
                end)
            end
        end)
    end
end)

CreateToggle(AutoTab, "Auto Click", UDim2.new(0, 10, 0, 130), function(state)
    getgenv().ZERO_HUB.AutoClick = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoClick and wait(0.1) do
                pcall(function()
                    VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 1)
                    VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 1)
                end)
            end
        end)
    end
end)

CreateToggle(AutoTab, "Fast Attack", UDim2.new(0, 10, 0, 170), function(state)
    getgenv().ZERO_HUB.FastAttack = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.FastAttack and wait() do
                pcall(function()
                    for _, tool in pairs(Player.Character:GetChildren()) do
                        if tool:IsA("Tool") then
                            tool:Activate()
                        end
                    end
                end)
            end
        end)
    end
end)

-- ========== üìç SISTEMA DE TELEPORTS ==========
local Islands = {
    {"üè¥‚Äç‚ò†Ô∏è Pirate Starter", CFrame.new(1099, 49, 1555)},
    {"‚öì Marine Starter", CFrame.new(-2828, 49, 2093)},
    {"üå¥ Jungle", CFrame.new(-1500, 70, -200)},
    {"üè† Pirate Village", CFrame.new(-1150, 50, 3850)},
    {"üèúÔ∏è Desert", CFrame.new(950, 50, 4100)},
    {"‚ùÑÔ∏è Frozen Village", CFrame.new(1150, 150, -1250)},
    {"üè∞ Marine Fortress", CFrame.new(-4850, 331, -360)},
    {"‚òÅÔ∏è Skylands", CFrame.new(-500, 450, -200)},
    {"üîí Prison", CFrame.new(4900, 50, 500)},
    {"üåä Underwater City", CFrame.new(3500, -200, 1000)},
    {"‚öîÔ∏è Colosseum", CFrame.new(-1800, 50, -2200)},
    {"üåã Magma Village", CFrame.new(-5500, 80, -1500)}
}

for i, island in pairs(Islands) do
    CreateButton(TeleportTab, island[1], UDim2.new(0, 10, 0, 10 + ((i-1) * 40)), function()
        pcall(function()
            Player.Character:SetPrimaryPartCFrame(island[2])
        end)
    end)
end

-- ========== üë§ MODIFICACIONES PLAYER ==========
CreateButton(PlayerTab, "üöÄ Walkspeed +50", UDim2.new(0, 10, 0, 10), function()
    pcall(function()
        Player.Character.Humanoid.WalkSpeed = 50
    end)
end)

CreateButton(PlayerTab, "ü¶ò JumpPower +100", UDim2.new(0, 10, 0, 50), function()
    pcall(function()
        Player.Character.Humanoid.JumpPower = 100
    end)
end)

CreateToggle(PlayerTab, "Noclip", UDim2.new(0, 10, 0, 90), function(state)
    getgenv().ZERO_HUB.Noclip = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.Noclip and wait() do
                pcall(function()
                    for _, part in pairs(Player.Character:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.CanCollide = false
                        end
                    end
                end)
            end
        end)
    end
end)

CreateToggle(PlayerTab, "Infinito Energy", UDim2.new(0, 10, 0, 130), function(state)
    getgenv().ZERO_HUB.InfEnergy = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.InfEnergy and wait() do
                pcall(function()
                    Player.Character.Energy.Value = 100
                end)
            end
        end)
    end
end)

-- ========== ‚öîÔ∏è SISTEMA DE RAIDS ==========
CreateToggle(RaidTab, "Auto Raid", UDim2.new(0, 10, 0, 10), function(state)
    getgenv().ZERO_HUB.AutoRaid = state
    if state then
        spawn(function()
            while getgenv().ZERO_HUB.AutoRaid and wait(5) do
                pcall(function()
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Raids", true)
                end)
            end
        end)
    end
end)

CreateButton(RaidTab, "Buy Raid Chip", UDim2.new(0, 10, 0, 50), function()
    pcall(function()
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Raids", "Check")
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Raids", "Buy", 1)
    end)
end)

-- ========== üîß MISCEL√ÅNEOS ==========
CreateButton(MiscTab, "üîÑ Rejoin Server", UDim2.new(0, 10, 0, 10), function()
    TeleportService:Teleport(game.PlaceId, Player)
end)

CreateButton(MiscTab, "üåê Server Hop", UDim2.new(0, 10, 0, 50), function()
    TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId)
end)

CreateButton(MiscTab, "‚è∞ Anti AFK", UDim2.new(0, 10, 0, 90), function()
    local VirtualUser = game:GetService("VirtualUser")
    Player.Idled:connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end)

CreateButton(MiscTab, "üìú Hide Interface", UDim2.new(0, 10, 0, 130), function()
    ScreenGui.Enabled = not ScreenGui.Enabled
end)

-- ========== üéØ SISTEMA DE SEGURIDAD ==========
-- Anti AFK Autom√°tico
local VirtualUser = game:GetService("VirtualUser")
Player.Idled:connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

-- Protecci√≥n contra kicks
game:GetService("Players").LocalPlayer.PlayerGui.ChildRemoved:Connect(function(child)
    if child.Name == "MainMenu" then
        wait(2)
        game:GetService("TeleportService"):Teleport(game.PlaceId)
    end
end)

