local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "üü¢ ZERO HUB PRO",
   LoadingTitle = "Cargando ZERO HUB...",
   LoadingSubtitle = "por Grok - Nov 2025",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "ZeroHubPro",
      FileName = "ZeroHubConfig"
   },
   Discord = {
      Enabled = false,
      Invite = "noinv",
      RememberJoins = true
   },
   KeySystem = false
})

local MainTab = Window:CreateTab("üè¥‚Äç‚ò†Ô∏è Auto Farm", 4483362458)
local FarmSection = MainTab:CreateSection("Farm Principal")

-- Variables Globales
getgenv().AutoFarm = false
getgenv().AutoBoss = false
getgenv().AutoMastery = false
getgenv().AutoRaid = false
getgenv().KillAura = false
getgenv().FruitSniper = false
getgenv().Team = "Pirates" -- Cambia a "Marines" si quieres

-- Funci√≥n Teleport Segura
local function TeleportTo(CFramePos)
   if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
      game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFramePos
   end
end

-- Auto Farm Levels (PRO: Detecta enemigos por nivel)
MainTab:CreateToggle({
   Name = "Auto Farm Niveles",
   CurrentValue = false,
   Flag = "AutoFarmToggle",
   Callback = function(Value)
      getgenv().AutoFarm = Value
      spawn(function()
         while getgenv().AutoFarm do
            pcall(function()
               local player = game.Players.LocalPlayer
               local char = player.Character
               if char and char:FindFirstChild("HumanoidRootPart") then
                  for _, enemy in pairs(workspace.Enemies:GetChildren()) do
                     if enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 and enemy.Name:find("Level") then
                        TeleportTo(enemy.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0))
                        game:GetService("VirtualUser"):CaptureController()
                        game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                     end
                  end
               end
            end)
            wait(0.1)
         end
      end)
   end,
})

-- Auto Boss Farm
MainTab:CreateToggle({
   Name = "Auto Farm Boss",
   CurrentValue = false,
   Flag = "AutoBossToggle",
   Callback = function(Value)
      getgenv().AutoBoss = Value
      spawn(function()
         while getgenv().AutoBoss do
            pcall(function()
               for _, boss in pairs(workspace.Enemies:GetChildren()) do
                  if boss.Name:find("Boss") and boss:FindFirstChild("Humanoid") and boss.Humanoid.Health > 0 then
                     TeleportTo(boss.HumanoidRootPart.CFrame)
                  end
               end
            end)
            wait(0.3)
         end
      end)
   end,
})

-- Mastery Farm
MainTab:CreateToggle({
   Name = "Auto Mastery",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoMastery = Value
      spawn(function()
         while getgenv().AutoMastery do
            game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("BuyFruit", "1")
            wait(1)
         end
      end)
   end,
})

local CombatTab = Window:CreateTab("‚öîÔ∏è Combate", 4483362458)
local CombatSection = CombatTab:CreateSection("Combate PRO")

-- Kill Aura
CombatTab:CreateToggle({
   Name = "Kill Aura (Ataque Autom√°tico)",
   CurrentValue = false,
   Flag = "KillAuraToggle",
   Callback = function(Value)
      getgenv().KillAura = Value
      spawn(function()
         while getgenv().KillAura do
            pcall(function()
               for _, enemy in pairs(workspace.Enemies:GetChildren()) do
                  if enemy:FindFirstChild("HumanoidRootPart") then
                     game.ReplicatedStorage.Remotes.CommF_:InvokeServer("1", "1")
                  end
               end
            end)
            wait(0.2)
         end
      end)
   end,
})

-- Fruit Sniper (Agarra frutas autom√°ticas)
CombatTab:CreateToggle({
   Name = "Fruit Sniper",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().FruitSniper = Value
      spawn(function()
         while getgenv().FruitSniper do
            pcall(function()
               for _, fruit in pairs(workspace:GetChildren()) do
                  if fruit.Name:find("Fruit") or fruit.Name:find("Leopard") or fruit.Name:find("Dragon") then
                     TeleportTo(fruit.CFrame)
                     fireclickdetector(fruit:FindFirstChild("ClickDetector"))
                  end
               end
            end)
            wait(0.5)
         end
      end)
   end,
})

-- Auto Raid
CombatTab:CreateToggle({
   Name = "Auto Raid",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoRaid = Value
      if Value then
         game.ReplicatedStorage.Remotes.CommF_:InvokeServer("RaidsRpc", "SelectRaid", "Flame")
         wait(2)
         game.ReplicatedStorage.Remotes.CommF_:InvokeServer("RaidsRpc", "StartRaid")
      end
   end,
})

local TeleTab = Window:CreateTab("üó∫Ô∏è Teleports", 4483362458)
local TeleSection = TeleTab:CreateSection("Islas Principales")

-- Teleports PRO (Coordenadas Update 2025)
TeleTab:CreateButton({
   Name = "Marine Starter (Lvl 1-15)",
   Callback = function()
      TeleportTo(CFrame.new(36, 7, 16))
   end,
})

TeleTab:CreateButton({
   Name = "Green Zone (Lvl 200+)",
   Callback = function()
      TeleportTo(CFrame.new(-2888, 43, 5580))
   end,
})

TeleTab:CreateButton({
   Name = "Sea 3 (Volcano)",
   Callback = function()
      TeleportTo(CFrame.new(-5197, 61, -2557))
   end,
})

TeleTab:CreateButton({
   Name = "Rejoin Server (Anti-AFK)",
   Callback = function()
      game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
   end,
})

-- ESP (Ver enemigos/jugadores)
local ESPTab = Window:CreateTab("üëÅÔ∏è ESP", 4483362458)
ESPTab:CreateToggle({
   Name = "ESP Enemigos",
   CurrentValue = false,
   Callback = function(Value)
      for _, enemy in pairs(workspace.Enemies:GetChildren()) do
         if Value then
            local esp = Instance.new("BillboardGui", enemy.Head)
            esp.Size = UDim2.new(0, 100, 0, 50)
            local text = Instance.new("TextLabel", esp)
            text.Size = UDim2.new(1, 0, 1, 0)
            text.BackgroundTransparency = 1
            text.Text = enemy.Name
            text.TextColor3 = Color3.new(1, 0, 0)
            text.TextStrokeTransparency = 0
         else
            if enemy.Head:FindFirstChild("BillboardGui") then
               enemy.Head.BillboardGui:Destroy()
            end
         end
      end
   end,
})

Rayfield:Notify({
   Title = "ZERO HUB PRO Cargado",
   Content = "¬°Script PRO activado! Activa Auto Farm y domina Blox Fruits. üçç‚öîÔ∏è",
   Duration = 5,
   Image = 4483362458
})
