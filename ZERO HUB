-- Crear botones de teleport organizados por nivel
TeleportTab:CreateLabel("=== ISLAS DE INICIO ===")
for _, island in pairs(FirstSeaIslands) do
    if island.Level == "0+" then
        TeleportTab:CreateButton(island.Name .. " [Lvl " .. island.Level .. "]", function()
            TeleportPlayer(island)
        end)
    end
end

TeleportTab:CreateLabel("=== ISLAS INTERMEDIAS ===")
for _, island in pairs(FirstSeaIslands) do
    local level = tonumber(island.Level:match("%d+"))
    if level and level >= 15 and level <= 120 then
        TeleportTab:CreateButton(island.Name .. " [Lvl " .. island.Level .. "]", function()
            TeleportPlayer(island)
        end)
    end
end

TeleportTab:CreateLabel("=== ISLAS AVANZADAS ===")
for _, island in pairs(FirstSeaIslands) do
    local level = tonumber(island.Level:match("%d+"))
    if level and level >= 150 or island.Level == "190-250" then
        TeleportTab:CreateButton(island.Name .. " [Lvl " .. island.Level .. "]", function()
            TeleportPlayer(island)
        end)
    end
end

TeleportTab:CreateLabel("=== ISLAS ESPECIALES ===")
for _, island in pairs(FirstSeaIslands) do
    if island.Level == "Var√≠a" then
        TeleportTab:CreateButton(island.Name .. " [Lvl " .. island.Level .. "]", function()
            TeleportPlayer(island)
        end)
    end
end

-- Funci√≥n mejorada de teleport
function TeleportPlayer(islandData)
    local Player = game.Players.LocalPlayer
    local Character = Player.Character
    
    if Character and Character:FindFirstChild("HumanoidRootPart") then
        -- Notificaci√≥n de teleport
        game:GetService("StarterGui"):SetCore("SendNotification",{
            Title = "ZERO HUB - Teleport",
            Text = "Viajando a: " .. islandData.Name,
            Duration = 3
        })
        
        -- Efecto de teleportaci√≥n suave
        local tweenInfo = TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
        local tween = TweenService:Create(Character.HumanoidRootPart, tweenInfo, {CFrame = islandData.CFrame})
        tween:Play()
        
        -- Mensaje en consola
        print("üìç ZERO HUB: Teleportando a " .. islandData.Name)
        print("üìä Nivel recomendado: " .. islandData.Level)
        print("üìù " .. islandData.Description)
    else
        warn("‚ùå Error: No se encontr√≥ el Character del jugador")
    end
end

-- Sistema de teleport autom√°tico por nivel
TeleportTab:CreateDropdown("Teleport Auto por Nivel", {
    "Nivel 0-14 (Starter Islands)",
    "Nivel 15-29 (Jungle)", 
    "Nivel 30-59 (Pirate Village)",
    "Nivel 60-89 (Desert)",
    "Nivel 90-119 (Frozen Village)",
    "Nivel 120-149 (Marine Fortress)",
    "Nivel 150+ (Skylands)",
    "Nivel 200+ (Magma Village/Prison)"
}, function(selected)
    local targetIsland
    
    if selected == "Nivel 0-14 (Starter Islands)" then
        targetIsland = FirstSeaIslands[1] -- Pirate Starter
    elseif selected == "Nivel 15-29 (Jungle)" then
        targetIsland = FirstSeaIslands[3] -- Jungle
    elseif selected == "Nivel 30-59 (Pirate Village)" then
        targetIsland = FirstSeaIslands[4] -- Pirate Village
    elseif selected == "Nivel 60-89 (Desert)" then
        targetIsland = FirstSeaIslands[5] -- Desert
    elseif selected == "Nivel 90-119 (Frozen Village)" then
        targetIsland = FirstSeaIslands[6] -- Frozen Village
    elseif selected == "Nivel 120-149 (Marine Fortress)" then
        targetIsland = FirstSeaIslands[7] -- Marine Fortress
    elseif selected == "Nivel 150+ (Skylands)" then
        targetIsland = FirstSeaIslands[8] -- Skylands Lower
    elseif selected == "Nivel 200+ (Magma Village/Prison)" then
        targetIsland = FirstSeaIslands[10] -- Magma Village
    end
    
    if targetIsland then
        TeleportPlayer(targetIsland)
    end
end)
