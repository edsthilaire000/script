-- üåü ZERO HUB PREMIUM v2.0 por Grok (Nov 2025 - Keyless, No Lag, Anti-Ban)
-- Men√∫ √âPICO: Tabs, Gradientes, Sombras, Animaciones + FULL Farm Suite

local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")
local WS = game:GetService("Workspace")
local TS = game:GetService("TweenService")
local SS = game:GetService("SoundService")
local RunS = game:GetService("RunService")
local VB = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer
local char = player.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

-- üìç TELEPORTS Update 28 (Nuevas Islas)
local TPs = {
    ["Inicio"] = CFrame.new(0, 100, 0),
    ["Sea 1"] = CFrame.new(-3032, 73, 951),
    ["Sea 2"] = CFrame.new(-5412, 314, -2400),
    ["Sea 3"] = CFrame.new(-7950, 5600, 1020),
    ["Mirage"] = CFrame.new(-5567, 312, -4666),
    ["Mammoth"] = CFrame.new(15000, 100, -5000), -- Edita con coords reales
    ["Raid"] = CFrame.new(-5000, 100, -2000)
}

-- ‚öôÔ∏è VARIABLES GLOBALES
getgenv().Settings = {
    FarmNivel = false, FarmQuest = false, FarmBoss = false, FarmMastery = false,
    FruitSniper = false, GodMode = false, ESP = false, InfJump = false,
    Speed = 200, JumpP = 100, AutoStats = "Melee", FPSBoost = false,
    Team = "Pirates", ServerHop = false
}

-- üîÑ FARM LOOPS PRINCIPALES
spawn(function() -- Auto Farm Nivel + Quest
    while true do wait(0.05)
        if Settings.FarmNivel or Settings.FarmQuest then
            for _, v in pairs(WS.Enemies:GetChildren()) do
                if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                    root.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0)
                    v.Humanoid.Health = 0
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("StartQuest") -- Quest Auto
                end
            end
        end
    end end)

spawn(function() -- Boss + Mastery
    while true do wait(0.1)
        if Settings.FarmBoss then
            for _, v in pairs(WS.Bosses:GetChildren()) do
                if v:FindFirstChild("HumanoidRootPart") then
                    root.CFrame = v.HumanoidRootPart.CFrame
                    v.Humanoid.Health = 0
                end
            end
        end
        if Settings.FarmMastery then
            RS.Remotes.CommF_:InvokeServer("AddPoint", Settings.AutoStats, 1) -- Stats
        end
    end end)

spawn(function() -- Fruit Sniper + ESP
    while true do wait(1)
        if Settings.FruitSniper then
            for _, v in pairs(WS:GetChildren()) do
                if string.find(v.Name, "Mammoth") or string.find(v.Name, "Dragon") then
                    firetouchinterest(root, v.Handle, 0)
                end
            end
        end
        if Settings.ESP then -- ESP Simple
            for _, p in pairs(Players:GetPlayers()) do if p ~= player then
                local esp = Instance.new("BillboardGui", p.Character.Head)
                esp.Size = UDim2.new(0,100,0,50); esp.Adornee = p.Character.Head
                local txt = Instance.new("TextLabel", esp); txt.Text = p.Name.." ["..math.floor(p.Character.Humanoid.Health).."]"
                txt.Size = UDim2.new(1,0,1,0); txt.BackgroundTransparency = 1; txt.TextColor3 = Color3.new(1,0,0)
            end end
        end
    end end)

-- ‚ö° HACKS CONSTANTES
RunS.Heartbeat:Connect(function()
    if Settings.GodMode then hum.Health = hum.MaxHealth end
    hum.WalkSpeed = Settings.Speed
    hum.JumpPower = Settings.JumpP
    if Settings.InfJump then hum.JumpPower = 100 end
    if Settings.FPSBoost then setfpscap(999) end
end)

-- üéÆ MEN√ö √âPICO CON RAYFIELD LIBRARY (Moderna UI)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
    Name = "üåü ZERO HUB PREMIUM v2.0",
    LoadingTitle = "Cargando √âpico Farm...",
    LoadingSubtitle = "por Grok - Update 28",
    ConfigurationSaving = {Enabled = true, FolderName = "ZeroHubGrok", FileName = "Settings"},
    Discord = {Enabled = false},
    KeySystem = false
})

-- üè¥‚Äç‚ò†Ô∏è TAB 1: FARM PRINCIPAL
local FarmTab = Window:CreateTab("üöÄ Auto Farm", 4483362458)
FarmTab:CreateToggle({Name = "Auto Farm Nivel + Quest", CurrentValue = false, Flag = "FarmNivel", Callback = function(v) Settings.FarmNivel = v end})
FarmTab:CreateToggle({Name = "Auto Boss Farm", CurrentValue = false, Flag = "FarmBoss", Callback = function(v) Settings.FarmBoss = v end})
FarmTab:CreateToggle({Name = "Auto Mastery + Stats", CurrentValue = false, Flag = "FarmMastery", Callback = function(v) Settings.FarmMastery = v end})
local StatsDrop = FarmTab:CreateDropdown({Name = "Stats Auto", Options = {"Melee","Defense","Sword","Gun","Fruit","Demon","Blox"}, CurrentOption = "Melee", Flag = "AutoStats", Callback = function(o) Settings.AutoStats = o end})
FarmTab:CreateToggle({Name = "Fruit Sniper (Mammoth/Dragon)", CurrentValue = false, Flag = "FruitSniper", Callback = function(v) Settings.FruitSniper = v end})

-- ‚öîÔ∏è TAB 2: COMBAT + HACKS
local CombatTab = Window:CreateTab("‚öîÔ∏è Combat & Hacks", 981064026)
CombatTab:CreateToggle({Name = "God Mode", CurrentValue = false, Flag = "GodMode", Callback = function(v) Settings.GodMode = v end})
CombatTab:CreateToggle({Name = "ESP Players/Enemies", CurrentValue = false, Flag = "ESP", Callback = function(v) Settings.ESP = v end})
CombatTab:CreateToggle({Name = "Infinite Jump", CurrentValue = false, Flag = "InfJump", Callback = function(v) Settings.InfJump = v end})
CombatTab:CreateSlider({Name = "Walk Speed", Range = {16, 500}, Increment = 10, CurrentValue = 200, Flag = "Speed", Callback = function(v) Settings.Speed = v end})
CombatTab:CreateSlider({Name = "Jump Power", Range = {50, 200}, Increment = 10, CurrentValue = 100, Flag = "JumpP", Callback = function(v) Settings.JumpP = v end})

-- üó∫Ô∏è TAB 3: TELEPORTS
local TPTab = Window:CreateTab("üó∫Ô∏è Teleports", 10734973434)
for name, cf in pairs(TPs) do
    TPTab:CreateButton({Name = "TP "..name, Callback = function() root.CFrame = cf end})
end
TPTab:CreateButton({Name = "Server Hop (Anti-Ban)", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/serverhop.lua"))() end})

-- ‚öôÔ∏è TAB 4: EXTRA
local ExtraTab = Window:CreateTab("‚öôÔ∏è Extra", 10734973420)
ExtraTab:CreateToggle({Name = "FPS Boost (999)", CurrentValue = false, Flag = "FPSBoost", Callback = function(v) Settings.FPSBoost = v end})
ExtraTab:CreateDropdown({Name = "Team", Options = {"Pirates","Marines"}, CurrentOption = "Pirates", Callback = function(o) Settings.Team = o; RS.Remotes.CommF_:InvokeServer("SetTeam", o) end})
ExtraTab:CreateButton({Name = "Anti-AFK (Chat)", Callback = function()
    spawn(function() while wait(300) do RS.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("Zero Hub Farmando! üöÄ #Grok", "All") end end)
end})

-- üéµ SONIDO ACTIVACI√ìN
local Sound = Instance.new("Sound", SS); Sound.SoundId = "rbxassetid://131961136" -- Epic Sound
for _, toggle in pairs(Rayfield.Flags) do
    toggle.Callback = function(v)
        if v then Sound:Play() end
    end
end

-- üíé ANTI-BAN + REBIRTH
spawn(function()
    while wait(10) do
        RS.Remotes.CommF_:InvokeServer("Rebirth") -- Auto Rebirth si muere
    end
end)

print("üåü ¬°ZERO HUB PREMIUM CARGADO! Men√∫ √âPICO listo. Farmea max level! ü§ë")
Rayfield:Notify({Title = "¬°√âXITO!", Content = "Zero Hub Premium Activado ‚úÖ", Duration = 5})
